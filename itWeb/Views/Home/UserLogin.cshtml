
@{
    Layout = null;
    var cityList = ViewBag.CityList;
}



@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizer")

<form style="margin-left: 10px">
    <h1>Enter user data</h1>
    <div class="form-group">
        <label>account</label>
        <input type="text" class="form-control" name="account" placeholder="enter account" />
    </div>
    <div class="form-group">
        <label>password</label>
        <input type="text" class="form-control" name="password1" placeholder="enter account" />
    </div>
    <div class="form-group">
        <label>check password</label>
        <input type="text" class="form-control" name="password2" placeholder="enter account" />
    </div>
    <div class="form-group">
        <label>address</label>
        <select id="city" name="city">
            <option value="">all</option>
            @for (int i = 0; i < cityList.Count; i++)
            {
                <option value="@cityList[i].CityId">@cityList[i].CityName</option>
            }

        </select>
        <select id="village" name="village">
            <option value="">請選擇縣市</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">ok</button>

</form>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $("#city").change(function () {
        var value = $("#city").val();
        console.log(value);
        $.ajax({
            type: "Post",
            url: "../Home/Village?id=" + value,
            data: '{}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            async: false,
            success: function (data) {
                $("#village").empty();
                if (data == "") {
                    $("#village").append("<option value=''>請選擇縣市</option>");
                }
                else {
                    var jo = JSON.parse(data);
                    console.log(data);
                    $("#village").append("<option value=''>請選擇</option>");
                    var i;
                    
                    for (i = 0; i < jo.length; i++) {
                        $("#village").append("<option value='" + jo[i].VillageId + "'>" + jo[i].VillageName + "</option>");
                    }
                }
            },
            failure: function (errMsg) {
                $("#village").empty();
                $("#village").append("<option value=''>請選擇縣市</option>");
            }
        })
    });
</script>